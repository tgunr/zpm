#!/usr/bin/env zsh

if [[ "$1" == 'load' ]]; then
  shift
  @zpm-load-plugins "$@"
  return 0
fi

if [[ "$1" == 'if' ]]; then
  if check-if "$2"; then
    shift 2
    zpm "$@"
  fi
  return 0
fi

if [[ "$1" == 'if-not' ]]; then
  if ! check-if "$2"; then
    shift 2
    zpm "$@"
  fi
  return 0
fi

if [[ "$1" == 'u' || "$1" == 'up' || "$1" == 'upgrade' ]]; then
  shift
  @zpm-upgrade "$@"
  return 0
fi

if [[ "$1" == 'c' || "$1" == 'cl' || "$1" == 'clean' ]]; then
  @zpm-clean
fi

if is-callable "zpm-$1"; then
  local call_fn=$1
  shift
  "zpm-${call_fn}" $@
  return 0
fi

echo 'Unknown command `zpm '"$@"'`'
# @zpm-load-plugins "$@"
